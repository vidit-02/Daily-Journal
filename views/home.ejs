<%- include("partials/header") -%>
<h1>Home</h1>
<p><%= startingContent%></p>

<% allposts.forEach(function(post){ %>
 <h1><%= post.title %></h1>
 <p>
   <%= post.content.substring(0,100)%>
   <a href="/post/<%=post._id%>">Read More</a>
 </p>
<%# substring will truncate the whole text till 100 characters %>
<% });%>
<%- include("partials/footer") -%>
